<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/grid_2"
    android:layout_marginRight="@dimen/grid_2"
    android:layout_marginTop="@dimen/grid_0.5"
    android:layout_marginBottom="@dimen/grid_0.5"
    android:padding="16dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:animateLayoutChanges="true">

        <FrameLayout
            android:id="@+id/top_layout"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_8"
            tools:showIn="@layout/section_item">

            <TextView
                android:id="@+id/number"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="@dimen/grid_2"
                android:layout_gravity="center_vertical"
                tools:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:layout_marginLeft="@dimen/grid_7"
                android:layout_gravity="center_vertical"
                tools:text="Nazev sekce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/chapters"
            tools:visibility="visible"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>


            <include layout="@layout/section_sub_item"/>

            <include layout="@layout/section_sub_item"/>

            <include layout="@layout/section_sub_item"/>

            <include layout="@layout/section_sub_item"/>

            <!-- include chapters programmatically via section_sub_item -->

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
