<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_root"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/grid_1"
    android:layout_marginBottom="@dimen/grid_1"
    android:layout_height="@dimen/grid_8"
    tools:showIn="@layout/content_video">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/grid_2" />

    <TextView
        android:id="@+id/name"
        android:text="Michal NovÃ¡k"
        android:layout_marginLeft="@dimen/grid_8"
        android:textColor="@color/lighter_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/comment"
        android:layout_marginLeft="@dimen/grid_8"
        android:text="To bylo nejlepsi video ever"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/time"
        android:text="15:32"
        android:layout_marginLeft="@dimen/grid_8"
        android:layout_gravity="bottom"
        android:textColor="@color/lighter_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>